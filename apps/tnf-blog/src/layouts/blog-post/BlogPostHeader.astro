---
import {ThemeToggler} from '../../components/ui/theme-toggler'
import FormattedDate from "../../components/FormattedDate.astro";

interface Props {
    title: string;
    subTitle: string;
    pubDate: string;
    author: {
        name: string;
        avatar: string;
        role: string;
    };
    minutesRead: number;
}

const {title, subTitle, pubDate, author, minutesRead, cover} = Astro.props;
---

<div>
    <div class="flex justify-between">
        <div class='max-w-3/4 flex-1'>
            <h1 class='m-0 leading-0'>{title}</h1>
            {subTitle &&
                    <div><i class="text-20 text-orange-200">{subTitle}</i></div>}
        </div>
        <!--<div class="flex flex-col items-end">-->
        <!--    <div class="block text-18 font-normal mb-2">Reading mode</div>-->
        <!--    <ThemeToggler client:load/>-->
        <!--</div>-->
    </div>
    <div class="flex gap-2 mt-10">
        <div class="">
            <img class="h-[93px] w-[93px] rounded-full object-cover object-center" src={author.avatar} alt="" />
        </div>
        <div class="flex flex-col gap-1">
            <div class="text-h2 leading-1">{author.name}</div>
            <div class="text-h6">{author.role}</div>
            <div class="text-caption text-orange-200">{minutesRead} / <FormattedDate date={pubDate} /></div>
        </div>
    </div>
</div>
