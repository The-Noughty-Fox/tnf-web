---
interface Props {
  date: Date;
}

const { date } = Astro.props;
const dateInstance = new Date(date);
const isoDate = dateInstance.toISOString();
const formattedDate = dateInstance.toLocaleDateString('en-us', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});
---

<time datetime={isoDate}>
  {formattedDate}
</time>
