---
import Container from '../../../layouts/Container.astro'
interface Props {
    caption: string;
    src: string;
    alt: string;
    width: number;
    height: number;
    maxHeight?: number;
    maxWidth?: number;
}
const { caption, src, alt, width, height, maxHeight, maxWidth } = Astro.props;
---

<figure class="bleed">
    <Container>
        <img style={`max-height: ${maxHeight ? `${maxHeight}px` : 'auto'}; max-width: ${maxWidth ? `${maxWidth}px` : 'auto'}`} class="object-cover w-full h-auto m-auto" src={src} alt={alt} width={width} height={height} />
        <figcaption class="font-bold">{caption}</figcaption>
    </Container>
</figure>
